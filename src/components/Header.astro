---
import TextSlider from "./TextSlider.astro";
import TextSlider2 from "./TextSlider2.astro";
import Separator from "./Separator.astro";
---
<header>
  <div class="top-row">
    <h1><a href="/"><TextSlider2 content="Jannis Reinelt" /></a></h1>
    <div class="toggles">
      <button id="lang-toggle" aria-label="Language"></button>
      <button id="theme-toggle" aria-label="Theme"></button>
    </div>
  </div>
  <Separator />
  <nav>
    <ul>
      <li>
        <a href="/about/">
          <span class="lang-de"><TextSlider content="Ã¼ber" /></span>
          <span class="lang-en"><TextSlider content="about" /></span>
        </a>
      </li>
      <li>
        <a href="/">
          <span class="lang-de"><TextSlider content="kunst/projekte" /></span>
          <span class="lang-en"><TextSlider content="art/projects" /></span>
        </a>
      </li>
      <li>
        <a href="/video-light-camera/">
          <span class="lang-de"><TextSlider content="video/licht/kamera" /></span>
          <span class="lang-en"><TextSlider content="video/light/camera" /></span>
        </a>
      </li>
      <li>
        <a href="/contact/">
          <span class="lang-de"><TextSlider content="kontakt" /></span>
          <span class="lang-en"><TextSlider content="contact" /></span>
        </a>
      </li>
    </ul>
  </nav>
</header>

<style>
  header { display: flex; flex-direction: column; gap: 0.5rem; }
  .top-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  h1 { margin: 0; font-size: 1rem; font-weight: 700; }
  .toggles {
    display: flex;
    gap: 0.5rem;
  }
  nav ul {
    display: flex;
    justify-content: space-between;
    list-style: none;
    padding: 0;
    margin: 0;
  }
</style>
