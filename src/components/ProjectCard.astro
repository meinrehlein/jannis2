---
import type { CollectionEntry } from "astro:content";

type Props = {
  project: CollectionEntry<"projects">;
};

const { project } = Astro.props;
const title = project.data.title ?? project.data.name;
---

<div
  class={`project ${project.data.kind}`}
  style={`--image: url('${project.data.images?.[0]?.src ?? ''}'); --rect-aspect: 1/1.417`}
  data-name={title}
  data-year={project.data.year}
  data-month={project.data.month}
  data-location={project.data.location}
  data-type={project.data.type}
  aria-label={title}
>
  {project.data.kind === 'text' && (
    <div class="rectangle-content">
      <div class="titlebox"><h3>{title}</h3></div>
      <p>{project.body}</p>
    </div>
  )}
  {project.data.kind === 'image' && project.data.images && (
    <div class="images">
      <img src={project.data.images[0].src} alt={project.data.images[0].alt} />
    </div>
  )}
  {project.data.kind === 'video' && project.data.video && (
    <div class="video-container">
      <video src={project.data.video} muted loop playsinline></video>
      <button class="mute-toggle">Unmute</button>
    </div>
  )}
</div>

<style>
  .project-card {
    display: flex;
    flex-direction: column;
    align-items: stretch;
  }
  .project-label {
    margin-bottom: 0.5rem;
    font-weight: bold;
    text-align: center;
  }
  .project {
    position: relative;
    background-image: var(--image);
    background-size: cover;
    background-position: center;
    width: var(--rect-width, 26.1rem);
    aspect-ratio: var(--rect-aspect, 1 / 1.417);
    height: auto;
    border: 1px solid black;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 16px rgba(61, 61, 61, 0.2);
    overflow: hidden;
  }
  .project.text {
    align-items: flex-start;
  }

  .titlebox {
    height: 2rem;
    overflow-y: hidden;
    text-align: left;
    font-weight: bold;
  }

  .rectangle-content {
    align-items: flex-start;
    flex-direction: column;
    padding: 2rem;
    padding-top: 10%;
  }
  .images img,
  video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  video {
    display: block;
  }
  .video-container {
    position: relative;
    width: 100%;
    height: 100%;
  }
  .mute-toggle {
    position: absolute;
    bottom: 0.5rem;
    left: 0.5rem;
    padding: 0.25rem 0.5rem;
    font-size: 0.75rem;
    background: rgba(0, 0, 0, 0.5);
    color: #fff;
    border: none;
    cursor: pointer;
  }
</style>
